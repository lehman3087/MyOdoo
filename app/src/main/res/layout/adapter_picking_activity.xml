<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="?attr/selectableItemBackground">

    <TextView
        android:id="@+id/id_colum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1."
        android:layout_marginLeft="10dp"
        android:textColor="@color/black"
        android:layout_marginTop="6dp"/>
    <TextView
        android:id="@+id/tv_display_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="M64681321"
        android:textSize="11sp"
        android:layout_toRightOf="@+id/id_colum"
        android:layout_marginTop="6dp"
        android:layout_marginLeft="10dp"/>
    <TextView
        android:id="@+id/tv_product_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:maxEms="10"
        android:lines="3"
        android:textColor="@color/cc"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/id_colum"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="5dp" />
    <TextView
        android:id="@+id/tv_all_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="需求数量:"
        android:textSize="13sp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/black"
        android:layout_marginTop="6dp"/>
    <TextView
        android:layout_marginTop="6dp"
        android:id="@+id/tv_product_qty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/tv_all_name"
        android:text="1400"
        android:textSize="13sp"
        android:textColor="@color/black"/>
    <TextView
        android:id="@+id/tv_name_process"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="工序:全检"
        android:textSize="13sp"
        android:textColor="@color/black"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="5dp"/>
    <TextView
        android:id="@+id/tv_date_planned_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2017.5.22"
        android:textSize="13sp"
        android:lines="2"
        android:maxEms="5"
        android:layout_marginTop="6dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"/>
    <TextView
        android:id="@+id/tv_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="备料完成"
        android:textSize="13sp"
        android:textColor="@color/viewfinder_laser"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="5dp"
        android:layout_alignLeft="@+id/tv_date_planned_start"/>
</RelativeLayout>